@{
    ViewBag.Title = "add/edit";
}

<h2>add/edit</h2>
<div ng-controller="AdminEventEditController">
    <form name="eventForm">
        <fieldset>
            <div class ="col-xs-6">
                <div class="form-group">
                    <label for="nazivEventa" class="control-label col-xs-12 col-lg-5">Naziv</label>
                        <div class="col-xs-12 col-lg-7">
                            <input type="text" class="form-control" id="nazivEventa" placeholder="naziv događanja" ng-model="event.EVE_Naziv">
                        </div>
                </div>
                <div class="form-group">
                    <label for="datumEventa" class="control-label col-xs-12 col-lg-5">Datum događaja</label>
                        <div class="col-xs-12 col-lg-7">                 
                            <div class="dropdown">
                              <a class="dropdown-toggle" id="datumEventa" role="button" data-toggle="dropdown" data-target="#" href="#">
                                <div class="input-group"><input type="text" id ="datumEventaInput" class="form-control" ng-model="event.EVE_Datum" placeholder="Datum događanja"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                              </a>
                              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker ng-model="data.dateDropDownInput" data-datetimepicker-config="{ dropdownSelector: '#datumEventaInput' }" data-on-set-time="datmEventaChange(newDate,oldDate)"/>
                              </ul>
                            </div>
                        </div>
                </div>

                <div class="form-group">
                    <label for="predProdajaKarataInput" class="control-label col-xs-12 col-lg-5">Datum predprodaje karata</label>
                        <div class="col-xs-12 col-lg-7">                 
                            <div class="dropdown">
                              <a class="dropdown-toggle" id="predProdajaKarataDatum" role="button" data-toggle="dropdown" data-target="#" href="#">
                                <div class="input-group"><input type="text" id ="predProdajaKarataInput" class="form-control" ng-model="event.EVE_DatumOdPretprodaja" placeholder="početak pretprodaje karata"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                              </a>
                              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker ng-model="data.dateDropDownInput" data-datetimepicker-config="{ dropdownSelector: '#predProdajaKarataInput' }" data-on-set-time="pretprodajaKarataChange(newDate,oldDate)"/>
                              </ul>
                            </div>
                        </div>
                </div>

                <div class="form-group">
                    <label for="prodajaKarataInput" class="control-label col-xs-12 col-lg-5">Datum prodaje karata</label>
                        <div class="col-xs-12 col-lg-7">                 
                            <div class="dropdown">
                              <a class="dropdown-toggle" id="prodajaKarataDatum" role="button" data-toggle="dropdown" data-target="#" href="#">
                                <div class="input-group"><input type="text" id ="prodajaKarataInput" class="form-control" ng-model="event.EVE_DatumOdProdaja" placeholder="početak prodaje karata"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                              </a>
                              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <datetimepicker ng-model="data.dateDropDownInput" data-datetimepicker-config="{ dropdownSelector: '#prodajaKarataDatum' }" data-on-set-time="prodajaKarataChange(newDate,oldDate)"/>
                              </ul>
                            </div>
                        </div>
                </div>

            <div class="form-group">
                <label for="imageUpload" class="control-label col-xs-12 col-lg-5">Odaberi sliku</label>
                <div class ="col-xs-12 col-lg-7">
                    <button type="file"
                    ngf-select ng-model="files" 
                    ng-model-rejected="rejFiles"  
                    ngf-multiple="false" 
                    accept="image/*" 
                    ngf-accept="'image/*'" 
                        >Upload</button>
                </div>
            </div>
            <div class="form-group">
                <label for="organizatorEventa" class="control-label col-xs-12 col-lg-5">Organizator</label>
                    <div class="col-xs-12 col-lg-7">
                        <select  class="form-control" id="organizatorEventa" placeholder="naziv događanja" ng-model="event.ORG_Id">
                            <option ng-repeat="o in eventOrganisers" value="{{o.ORG_Id}}" ng-selected ="{{o.ORG_Id==event.ORG_Id}}">{{o.ORG_Naziv}}</option>
                        </select>
                    </div>
            </div>
                <div class="form-group">
                    <label for="postotakProvizijeEventa" class="control-label col-xs-12 col-lg-5">Postotak provizije</label>
                        <div class="col-xs-12 col-lg-7">
                            <input type="text" class="form-control" id="postotakProvizijeEventa" placeholder="Postotak provizije" ng-model="event.EVE_PostotakProvizije">
                        </div>
                </div>
            <div class="form-group">
                <label for="mjestoEventa" class="control-label col-xs-12 col-lg-5">Grad</label>
                    <div class="col-xs-12 col-lg-7">
                        <select  class="form-control" id="mjestoEventa" ng-model="event.EVE_MjestoId">
                            <option ng-repeat="t in eventTowns" value="{{t.MJE_Id}}" ng-selected ="{{t.MJE_Id == event.EVE_MjestoId}}">{{t.MJE_Naziv}}</option>
                        </select>
                    </div>
            </div>
            <div class="form-group">
                <label for="lokacijaEventa" class="control-label col-xs-12 col-lg-5">Lokacija</label>
                    <div class="col-xs-12 col-lg-7">
                        <select  class="form-control" id="lokacijaEventa" ng-model="event.EVE_DvoranaId">
                            <option ng-repeat="l in eventLocations" value="{{l.DVO_Id}}" ng-selected ="{{l.DVO_Id == event.EVEDvoranaId}}">{{l.DVO_Naziv}}</option>
                        </select>
                    </div>
            </div>
                <div class="form-group">
                <label for="statusEventa" class="control-label col-xs-12 col-lg-5">Status</label>
                    <div class="col-xs-12 col-lg-7">
                        <select  class="form-control" id="statusEventa" ng-model="event.SEV_Id">
                            <option ng-repeat="s in eventStatus" value="{{s.SEV_Id}}" ng-selected ="s.SEV_Id==event.SEV_Id">{{s.SEV_Naziv}}</option>
                        </select>
                    </div>
            </div>
                <div class="form-group">
                <label for="prikazEventa" class="control-label col-xs-12 col-lg-5">Prikaži na stranici</label>
                    <div class="col-xs-12 col-lg-7">
                        <div class="checkbox">
                          <label><input type="checkbox" ng-checked="{{event.EVE_PrikaziNaWebu}}" ng-model="event.EVE_PrikaziNaWebu"></label>
                        </div>
                    </div>
            </div>

        </div>
            <div class="col-xs-6">
                <label for="description" class="control-label col-xs-12">Opis</label>
                <textarea ui-tinymce="tinymceOptions" ng-model="event.EVE_Opis"></textarea>
            </div>
         
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary" ng-disabled="disabledFlag" ng-click="save(event)">Submit</button>
            </div>      
        </fieldset>
    </form>

</div>