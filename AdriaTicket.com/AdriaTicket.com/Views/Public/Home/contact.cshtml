@{
    ViewBag.Title = "contact";
}
<div id="main-content" class="container">
    <div ng-controller="ContactController">
        <div class="col-sm-7">
            <h3>Kontakt</h3>
            <hr />
            <form class="contact">
                <div class="form-group">
                    <label for="ime">Ime</label>
                    <input type="text" class="form-control" id="ime" placeholder="Vaše ime">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Vaš email">
                </div>
                <div class="form-group">
                    <label for="poruka">Poruka</label>
                    <textarea rows="5" class="form-control" id="poruka" placeholder="Vaša poruka"></textarea>
                </div>
                <button type="submit" class="btn btn-default">Pošalji</button>
            </form>
        </div>
        <div class="col-sm-5">
            <h3>Kontakt informacije:</h3>
            <div class="contact-info row">
                <ul class="col-sm-6">
                    <li>Prstac d.o.o.</li>
                    <li>Makarska 17</li>
                    <li>21000 Split</li>
                    <li>Hrvatska</li>
                </ul>
                <ul class ="col-sm-12">
                </ul>
            </div>
        </div>
    </div>
</div>