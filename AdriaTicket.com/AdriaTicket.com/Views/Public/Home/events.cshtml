@{
    ViewBag.Title = "events";
}

<div ng-controller="allEventsPublicController">
    <div class="row">
            <div ng-repeat="event in events | filter:$parent.search" class="col-md-4 col-sm-6 one-event">
                <a href={{"/event/"+event.EVE_Id}}>
                    <img src="/Library/img/colonia-testna-slika.jpg" class="thumbnail" />
                    <div class="event-content">
                        <h3>{{event.EVE_Naziv}} </h3>
                        <p> {{event.EVE_Datum}} </p>
                        <p> {{event.vrijeme}} </p>
                    </div>
                </a>
            </div>
        </div>
</div>
