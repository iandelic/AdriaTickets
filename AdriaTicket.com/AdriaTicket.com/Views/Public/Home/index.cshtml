@{
    ViewBag.Title = "AdriaTicket - Naslovnica";
}

<div class="row">
    <div class="fotorama col-sm-12"
         data-width="100%"
         data-ratio="16/6"
         data-autoplay="3000"
         data-loop="true"
         data-nav="thumbs"
         data-thumbwidth="200">
        <img src="~/Library/img/dino-merlin.jpg" class="img-responsive" />
        <img src="~/Library/img/sustipanska-noc.jpg" class="img-responsive" />
        <img src="~/Library/img/talking-heads.jpg" class="img-responsive" />
    </div>
</div>

<div class="row">
    <div class="col-md-12 ads-container">
        <a href="http://www.uni-rent.net">
            <img src="/Library/img/unirent.png" alt="uni-rent" class="center-block img-responsive">
        </a>
    </div>
</div>

<div class="row">
    <div ng-controller="HomeController" class="col-md-9">   
        <div class="row">
            <div ng-repeat="event in events" class="col-md-4 col-sm-6 one-event">
                <a href={{"/public/event/"+event.EVE_Id}}>
                    <img src="/Library/img/colonia-testna-slika.jpg" class="thumbnail" />
                    <div class="event-content">
                        <h3>{{event.EVE_Naziv}} </h3>
                        <p> {{event.EVE_Datum}} </p>
                        <p> {{event.vrijeme}} </p>
                    </div>
                </a>
            </div>
        </div>
        </div>
    <!-- Facebook plugin -->
    <div id="fb-root"></div>
    <script>
(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.3";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
    <!-- / Facebook plugin -->
        <div class="sidebar col-md-3">
            <div class="fb-page" data-href="https://www.facebook.com/adriaticket" 
                 data-hide-cover="false" data-show-facepile="true" data-show-posts="false">
                <div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/adriaticket">
                    <a href="https://www.facebook.com/adriaticket">Adriaticket</a></blockquote>
                </div>
            </div>
        </div>
    </div>
